# Git Configuration
# Copy to ~/.gitconfig

[user]
    name = Gabriel
    email = your-email@example.com

[init]
    defaultBranch = master

[core]
    editor = nvim
    pager = less -FRX

[pull]
    rebase = true

[push]
    autoSetupRemote = true

[merge]
    conflictStyle = diff3

[diff]
    colorMoved = default

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    lg = log --pretty=format:'%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]' --decorate --date=short
    unstage = reset HEAD --
    last = log -1 HEAD
    visual = !gitk

[credential]
    helper = cache --timeout=3600
